<body>

    <!-- Page Content -->
    <div class="container" style="max-width: 600px">

    <!-- Logo -->
        <div class="row" style="align: middle">
          <div class="col-md-4">
            <img id="plane-img" src="paper-plane.png" style="width: 65 px; height: 65px; margin-left: 3cm;" class="img-responsive"> </img>
            </div>
            <div class="col-md-6">
              <h2>Flight Time</h2>
            </div>
        </div>

        <div class="row text-center">
          <p>We do the calculations so you don't have to!</p>
        </div>
        <!-- /.row -->

        <!-- Panel Body --> 
        <div class="panel">
          <div class="panel-heading">
            <h3 class="panel-title">Enter your flight information</h3>
          </div>
          <form action="/result" method="POST" id="flightform">

          <!-- Flight Information (First div class) -->
          <div class="panel-body">
              <div class="form-group row">
                <div class="col-xs-6">
                  <label for="flightnum" class="col-form-label">What is your flight number?</label>
                  <input class="form-control" type="text" value="1986" name="flightnum" id="flightnum">
                </div>
                <div class="col-xs-6">
                  <label for="flightdate" class="col-form-label">When are you leaving?</label>
                  <input class="form-control" type="text" value="2016-09-09" name="flightdate" id="flightdate">
                </div>
              </div>

              <!-- Location -->
              <div class="form-group row">
                <div class="col-xs-6">
                  <label for="loc-end-id" class="col-form-label">Where are you starting?</label>
                  <input class="form-control" type="location" value="Georgia Tech" id="loc-end-id">
                </div>
                <div class="col-xs-6">
                  <button type="button" class="btn btn-default btn-md"  style="margin-top:25px;" id="gpsBtn">
                    <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> Current Location
                  </button>
                </div>
              </div>
              
              <!-- Submit -->
              <div class="col-md-12">
              <button type="button" name="submit" id="submit" class="btn" style="width: 30%; height: 100%; margin: 0 auto">Submit</button>
              </div>
          </div>
          </form>
        </div>

        <div id="result-panel">
        </div>
        <div id="spinner-div" style="visibility:hidden;">
          <img src="/img/spinner.gif" id="spinner" align="middle"
          style="width:40px;heigh40px;display:block;margin:0 auto;margin-top:40px;">
        </div>


